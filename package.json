{
  "name": "i18n-smart",
  "version": "0.2.0",
  "description": "Smart and lightweight module for localization with dynamic storage.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\"",
    "link": "cd lib && sudo npm link i18n-smart",
    "unlink": "cd lib && sudo npm unlink i18n-smart"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxmarinich/i18n-smart.git"
  },
  "keywords": [
    "i18n",
    "localization",
    "internationalization",
    "typescript",
    "react",
    "react integration"
  ],
  "author": "Max Marinich",
  "maintainers": [
    {
      "name": "Max Marinich",
      "email": "max.marinich@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maxmarinich/i18n-smart/issues"
  },
  "homepage": "https://github.com/maxmarinich/i18n-smart#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "jest": "^24.0.0",
    "react": ">=16.2",
    "ts-jest": "^24.0.2",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "react-interpolate-plugin": "^0.2.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
